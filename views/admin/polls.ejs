<%- include('../includes/header')%>
<div class="container" style="width:60%; margin-top:40px;">
  <form>
    <div class="form-group">
      <label>Введите название опроса</label>
      <input class="form-control" type="text">
    </div>
    <div class="form-group">
      <textarea class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
      <input type="checkbox">
      <label class="form-check-label">Активен</label>
    </div>
    <div class="form-group">
      <label class="form-check-label">Дата начала</label>
      <input class="form-control" type="date" style="width:30%">
    </div>
    <div class="form-group">
      <label class="form-check-label">Дата окончания</label>
      <input class="form-control" type="date" style="width:30%">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success" style="float:right">Сохранить</button>
    </div>
</div>
</form>
</div>
<%- include('../includes/footer') %>